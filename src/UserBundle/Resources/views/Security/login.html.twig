{# Overriding default login.html.twig brought by FOSUserBundle#}
{% extends '::layout.html.twig' %}
{% block fos_user_content %}
    <script>
        Show('.FormBody');
    </script>
        <div class="FormContainer">
            <div id="loginForm" class="user_login">
                 {% if error %}
                     <div>{{ error.messageKey|trans }}</div>
                 {% endif %}

                 <form method="post" action="{{ path("fos_user_security_check") }}" novalidate="novalidate">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                     <div class="FormHeader">
                        <h3>Logowanie</h3>
                     </div>

                    <label class="top-padding" for="username"><h4 class="text-left">{{ 'Nazwa użytkownika/Email'|trans }}</h4></label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                    <label class="top-padding" for="password"><h4 class="text-left">{{ 'Hasło'|trans }}</h4></label>
                    <input type="password" id="password" name="_password" required="required" />


                    <div class="rememberMe">
                        <div class="leftFloater"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /></div>
                        <label for="remember_me">{{ 'Zapamiętaj mnie'|trans }}</label>
                    </div>

                     <div class="one_half"><a href="{{ path('home') }}" class="btn back_btn"><i class=" fa fa-angle-double-left"></i> Back</a></div>
                    <input type="submit" class="one_half last btn btn_red " id="_submit" name="_submit" value="{{ 'Zaloguj'|trans }}" />
                 </form>

                 <div class="top-padding"><a href="#" class="forgot_password">Zapomniałeś hasła?</a></div>

            </div>
        </div>
{% endblock fos_user_content %}