{% extends "UserBundle:Profile:show.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}




{% block profileContent %}

    <div id="registerForm" class="user_register">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        {{ form_widget(form) }}
        <div class="action_btns top-padding">
            <input type="submit" class="btn btn_red" value="{{ 'change_password.submit'|trans }}" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
